<!DOCTYPE html>

<body id="{{pageId}}">
  <!--************ Index************-->
  <div id="index" class="container">
    <div class="row">
      <h1 class="center-align">{{title }}</h1>
      <h2 class="center-align">Branding Content</h2>
    </div>
  </div>
  <!--************ Login************-->
  <div id="login" class="container">
    <div class="row">
      <div class="col s12 m3"></div>
      <div class="col s12 m6 center-align">
        <div class="row">
          {{!-- <form class="col s12"> --}}
            <div class="row">
              <div class="input-field col s12">
                <input id="username" type="text" class="validate">
                <label for="username">Username</label>
              </div>
            </div>
            <div class="row">
              <div class="input-field col s12">
                <input id="password" type="password" class="validate">
                <label for="password">Password</label>
              </div>
            </div>
            <button id="loginSubmit" class="btn waves-effect waves-light" type="submit" name="action">Submit
              <i class="material-icons right">send</i>
            </button>
          {{!-- </form> --}}
        </div>
      </div>
      <div class="col s12 m3"></div>
    </div>
  </div>
  <!--************ Register************-->
  <div id="register" class="container">
    <div class="row">
      <div class="col s12 m3"></div>
      <div class="col s12 m6 center-align">
        <div class="row">
          <form class="col s12">
            <div class="row">
              <div class="input-field col s12">
                <input id="username" type="text" class="validate">
                <label for="username">Username</label>
              </div>
            </div>
            <div class="row">
              <div class="input-field col s12">
                <input id="email" type="email" class="validate">
                <label for="email">Email</label>
              </div>
            </div>
            <div class="row">
              <div class="input-field col s12">
                <input id="password" type="password" class="validate">
                <label for="password">Password</label>
              </div>
            </div>
            <div class="row">
              <div class="input-field col s12">
                <input id="confirm-password" type="password" class="validate">
                <label for="password">Confirm Password</label>
              </div>
            </div>
            <button class="btn waves-effect waves-light" type="submit" name="action">Submit
                <i class="material-icons right">send</i>
              </button>
          </form>
        </div>
      </div>
      <div class="col s12 m3"></div>
    </div>
  </div>
<!--************ Chat************-->
  <div id="chat" class="container">
    <form name="chatForm" class="col s12">
      <div class="row">
        <div class="col s12 m3"></div>
        <div class="input-field col s12 m6">
          <input id="chat-user" type="text" class="validate">
          <label for="name">Name</label>
        </div>
        <div class="col s12 m3"></div>
      </div>

      <div class="row">
        <div class="col s12 m3"></div>
        <div class="input-field col s12 m6">
          <input id="chat-message" type="text" class="validate">
          <label for="message">Message</label>
        </div>
        <div class="col s12 m3"></div>
      </div>

      <div class="row">
        <div class="col s12 m3"></div>
        <div class="input-field col s12 m6 center-align">
          <button id="chat-button" class="btn waves-effect waves-light" type="submit" name="action">Submit
            <i class="material-icons right">send</i>
          </button>
        </div>
        <div class="col s12 m3"></div>
      </div>
    </form>

    <div class="row">
      <div class="col s12 m3"></div>
      <div class="chat-display col s12 m6">
        <p class="chat-text"></p>
      </div>
      <div class="col s12 m3"></div>
    </div>
  </div>
<!--************ Room************-->
  <div id="room" class="container row">
    <div class="col s12 m3"></div>
      <ul class="collection with-header col s12 m6">
        <li class="collection-header"><h4>Select a room:</h4></li>
        <a id="play"class="collection-item" name="single" value="1">Play Game</a>
        {{!-- <a id="room2" class="collection-item" name="multi" value="2">Multi-Player</a> --}}
      </ul>
    <div class="col s12 m3"></div>
  </div>


<!--************ Category list************-->
  <div id="category" class="container">
    <div class="row">
      <div class="col s12 m3"></div>
      <ul class="collection with-header col s12 m6">
          <li class="collection-header"><h4>Select a category:</h4></li>
          <a id="cat1" href="#!" class="collection-item" name="cat1" value="1">Category 1</a>
          <a id="cat2" href="#!" class="collection-item" name="cat2" value="2">Category 2</a>
          <a id="cat3" href="#!" class="collection-item" name="cat3" value="3">Category 3</a>
          <a id="cat4" href="#!" class="collection-item" name="cat4" value="4">Category 4</a>
        </ul>
      <div class="col s12 m3"></div>
    </div>
  <!-- User icons -->
    <div class="row">
      <div class="col s12 m3"></div>
        <div class="col s12 m6">
          <div class="row">
            <div class="col s1"></div>
            <div class="col s2"><i class="medium material-icons center-align">check_box_outline_blank</i></div>
            <div class="col s2"><i class="medium material-icons center-align">check_box_outline_blank</i></div>
            <div class="col s2"><i class="medium material-icons center-align">check_box_outline_blank</i></div>
            <div class="col s2"><i class="medium material-icons center-align">check_box_outline_blank</i></div>
            <div class="col s2"><i class="medium material-icons center-align">check_box_outline_blank</i></div>
            <div class="col s1"></div>
          </div>
        </div>
      <div class="col s12 m3"></div>
    </div>
  </div>

  <!--************ Game************-->
  <div id="game" class="container">
    <div class="row">
      <div class="col s12 m3"></div>
      <div class="col s12 m6 center-align">
        <h4>Time Left</h4>
        <p><span id="game-clock">0:00</span></p>
      </div>
      <div class="col s12 m3"></div>
    </div>


  <!-- Song list -->
    <div class="row">
      <div class="col s12 m3"></div>
      <ul class="collection with-header col s12 m6">
        <li class="collection-header"><h4>Select a song:</h4></li>
        <a id="song1" href="#!" class="collection-item" name="song1" value="1">{{song1}}</a>
        <a id="song2" href="#!" class="collection-item" name="song2" value="2">{{song2}}</a>
        <a id="song3" href="#!" class="collection-item" name="song3" value="3">{{song3}}</a>
        <a id="song4" href="#!" class="collection-item" name="song4" value="4">{{song4}}</a>
      </ul>
      <div class="col s12 m3"></div>
    </div>


  <!-- User icons -->
  <!-- TODO This should be a loop using handlebars that dynamically lists the users -->
   <div class="row">
      <div class="col s12 m3"></div>
      <div class="col s12 m6">
        <div class="row">
          <div id="players" class="col s1"></div>
          {{!-- <div class="col s2"><i class="medium material-icons">check_box_outline_blank</i></div> --}}
          {{!-- <div class="col s2"><i class="medium material-icons">check_box_outline_blank</i></div>
          <div class="col s2"><i class="medium material-icons">check_box_outline_blank</i></div>
          <div class="col s2"><i class="medium material-icons">check_box_outline_blank</i></div>
          <div class="col s2"><i class="medium material-icons">check_box_outline_blank</i></div>--}}

           <div class="col s2" id="player1"></div> 
           <div class="col s2"id="player2"></div>
           <div class="col s2" id="player3"></div>
           <div class="col s2" id="player4"></div>
           <div class="col s2" id="player5"></div> 

          <div class="col s1"></div>
        </div>
      </div>
      <div class="col s12 m3"></div>
    </div>
  </div>
</body>

